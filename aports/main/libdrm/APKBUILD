# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libdrm
pkgver=2.4.90
pkgrel=2
pkgdesc="Userspace interface to kernel DRM services"
url="https://dri.freedesktop.org/"
arch="all"
# Requires a computer with gfx, no X running, build user in 'video' group..
options="!check !strip"
license="MIT"
depends=""
depends_dev="linux-headers"
makedepends="$depends_dev libpthread-stubs eudev-dev libpciaccess-dev xmlto"
checkdepends="cunit-dev bash"
subpackages="$pkgname-dev $pkgname-doc"
#https://dri.freedesktop.org/$pkgname/$pkgname-$pkgver.tar.bz2
#fix-symbol-checks.patch
source="libdrm.tar.gz
	ioctl.patch
	"

#builddir="$srcdir/$pkgname-$pkgver"
builddir="$srcdir/drm"

build() {
	cd "$builddir"
	export CFLAGS="$CFLAGS -g -w"
	export LDFLAGS="$LDFLAGS -g"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-freedreno \
		--enable-freedreno-kgsl \
		--enable-udev \
		--disable-valgrind
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}


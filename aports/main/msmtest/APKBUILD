# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=msmtest
pkgver=1.0.0
pkgrel=1
pkgdesc="minimal msm test"
url="https://dri.freedesktop.org/"
arch="all"
options="!check !strip"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev libdrm-dev"
checkdepends="cunit-dev bash"
subpackages=""
source="msmtest.tar.gz"

builddir="$srcdir/msmtest"

build() {
	cd "$builddir"
	export CFLAGS="$CFLAGS -g -w"
	export LDFLAGS="$LDFLAGS -g"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

check() {
	cd "$builddir"
	make check
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="e724270e65b16b03144bf944d65b9f568f4d0786c9b92486571f0f7b0de33dd920e2017fc0457f0865145aa63a4b2b7ecbb8b462ed8626f27ebe21a7028f0017  msmtest.tar.gz"

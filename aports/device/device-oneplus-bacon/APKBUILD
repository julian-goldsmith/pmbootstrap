pkgname=device-oneplus-bacon
pkgver=1
pkgrel=12
pkgdesc="OnePlus One"
url="https://github.com/postmarketOS"
arch="noarch"
license="MIT"
#depends="postmarketos-base linux-oneplus-bacon linux-firmware mkbootimg mesa-dri-freedreno xorg-server-dbg xf86-input-libinput"
depends="postmarketos-base linux-oneplus-bacon linux-firmware mkbootimg mesa-dri-freedreno xorg-server-dbg xf86-input-libinput xf86-video-freedreno firmware-adreno"
makedepends=""
install=""
subpackages="$pkgname-weston"
source="deviceinfo 90-android-touch-dev.rules weston.ini"
options="!check"

package() {
	install -Dm644 "$srcdir"/deviceinfo \
		"$pkgdir"/etc/deviceinfo
	install -Dm644 "$srcdir"/90-android-touch-dev.rules \
		"$pkgdir"/etc/udev/rules.d/90-android-touch-dev.rules
}

weston() {
	install_if="$pkgname weston"
	install -Dm644 "$srcdir"/weston.ini \
		"$subpkgdir"/etc/xdg/weston/weston.ini
}

